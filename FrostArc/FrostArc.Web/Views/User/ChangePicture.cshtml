@model UserProfilePictureViewModel

@{
    ViewData["Title"] = "Update Avatar";
}

<h2>Update Profile Picture</h2>

<form asp-controller="User" asp-action="ChangePicture" method="post">
    <div class="form-group">
        <input asp-for="UserId" type="hidden" />

        <label asp-for="ImageUrl" for="newProfilePictureUrl">New Profile Picture URL</label>
        <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Enter image URL" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Picture</button>
</form>

<style>
    .form-group {
        margin-bottom: 20px;
    }
</style>