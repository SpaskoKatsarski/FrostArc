@model IEnumerable<PlatformAllViewModel>

@{
    ViewBag.Title = "Platforms";
}

<h2>Platforms</h2>

<div class="container">
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var platform in Model)
            {
                <div class="col-md-4">
                    <a asp-controller="Platform" asp-action="Details" asp-route-id="@platform.Id" style="text-decoration: none;">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@platform.Name</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <p>No genres currently availible.</p>
    }
</div>