@model FrostArc.Web.ViewModels.Game.GameDetailsViewModel

@{
    ViewBag.Title = "Game Details";
}

<h2>@Model.Title</h2>

<div class="game-details">
    <img src="@Model.ImageUrl" alt="Image of @Model.Title" class="game-image" />
    <p>@Model.Description</p>
    <p><strong>Developer:</strong> @Model.Developer</p>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <h3>Available on Platforms:</h3>
    <ul>
        @foreach (var platform in Model.Platforms)
        {
            <li>@platform</li>
        }
    </ul>
</div>