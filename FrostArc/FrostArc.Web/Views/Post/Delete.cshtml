@model PostDeleteViewModel

@{
    ViewBag.Title = "Delete Post";
}

<h2>@ViewBag.Title</h2>
<hr />

<form method="post" asp-controller="Post" asp-action="Delete">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.ImageUrl" alt="Post image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" disabled="disabled" />
            </div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <input asp-for="CommunityId" type="hidden" />
            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>