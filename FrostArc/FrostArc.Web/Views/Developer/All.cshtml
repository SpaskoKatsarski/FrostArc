@model IEnumerable<DeveloperAllViewModel>

@{
    ViewBag.Title = "Game Developers";
}

<h2>Game Developers</h2>

<form asp-controller="Developer" asp-action="All" method="get">
    <div class="form-group mb-2 text-center">
        <input type="text" name="queryStr" class="form-control" placeholder="Search developers" />
        <button type="submit" class="btn btn-primary mt-2 mb-3">Search</button>
    </div>
</form>

<div class="container">
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var developer in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@developer.Name</h5>
                            <a asp-controller="Developer" asp-action="Details" asp-route-id="@developer.Id">
                                <img class="card-img-top" src="@developer.ImageUrl" alt="Dev image" />
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No developers presented.</p>
    }
</div>