@model IEnumerable<GenreAllViewModel>

@{
    ViewBag.Title = "Game Genres";
}

<h2>Game Genres</h2>

<form asp-controller="Genre" asp-action="All" method="get">
    <div class="form-group mb-2 text-center">
        <input type="text" name="queryStr" class="form-control" placeholder="Search genres" />
        <button type="submit" class="btn btn-primary mt-2 mb-3">Search</button>
    </div>
</form>

<div class="container">
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var genre in Model)
            {
                <div class="col-md-4">
                    <a asp-controller="Game" asp-action="All" asp-route-genreId="@genre.Id" style="text-decoration: none;">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@genre.Name</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <p>No genres currently availible.</p>
    }
</div>