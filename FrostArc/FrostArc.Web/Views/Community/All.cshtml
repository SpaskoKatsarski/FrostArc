@model IEnumerable<CommunityAllViewModel>

@{
    ViewBag.Title = "Communities";
}

<h2>Communities</h2>

<div class="container">
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var community in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@community.Name</h5>
                            <a asp-controller="Community" asp-action="Details" asp-route-id="@community.Id">
                                <img class="card-img-top" src="@community.ImageUrl" alt="Community image" />
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>There are currently no communities.</p>
    }
</div>